<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="235dp"
        android:text="Текст 1"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="233dp"
        android:layout_marginRight="17dp"
        android:text="Текст 2"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/orange"
        android:text="Кнопка оранжевого цвета"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@id/text_top_left"
        android:layout_marginLeft="-37dp"
        android:layout_marginTop="232dp"
        android:layout_toRightOf="@id/text_top_left"
        android:background="@color/light_green"
        android:inputType="text"
        android:text="Поле для редактирования текста" />

</RelativeLayout>